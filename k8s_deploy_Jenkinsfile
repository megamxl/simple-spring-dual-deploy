pipeline {
    agent any

    environment {
        KUBECONFIG = credentials('k3s--creds')  // Jenkins credential ID
    }

    stages {

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                    export KUBECONFIG=$KUBECONFIG
                    kubectl apply -f ./k8s
                """
            }
        }
    }

    post {
        failure {
            echo "Deployment failed ❌"
        }
        success {
            echo "Deployment succeeded ✅"
        }
    }
}
