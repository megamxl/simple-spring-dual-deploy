pipeline {
    agent any

    stages {
        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'k3s--creds', variable: 'KUBECONFIG')]) {
                    sh '''
                      echo "Deploying using kubeconfig at $KUBECONFIG"
                      export KUBECONFIG=$KUBECONFIG
                      kubectl apply -f ./k8s
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo "Deployment failed ❌"
        }
        success {
            echo "Deployment succeeded ✅"
        }
    }
}
